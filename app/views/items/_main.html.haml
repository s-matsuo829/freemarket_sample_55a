%main.toppage-main
  .main-header
  -# メイン上部の、キャンプの画像があるところ
  .main-content

    - if @items.present?
      %h3
        = link_to show_all_items_path do
          新着アイテム
      .main-content__list

        = render partial: "items/item", locals: {items: @items_limit_4, likes: @likes}


      .main-content__view-all
        = link_to show_all_items_path do
          すべての商品を見る

    - if @items_user.present?
      %h3
        = link_to show_user_all_items_path do
          = "#{current_user.nickname}さんの出品した商品"
      .main-content__list

        = render partial: "items/item", locals: {items: @items_user}

      .main-content__view-all
        = link_to show_user_all_items_path do
          すべての商品を見る

    - if @items_other.present?
      %h3
        = link_to show_other_all_items_path do
          他のユーザーの新着アイテム
      .main-content__list

        = render partial: "items/item", locals: {items: @items_other}

      .main-content__view-all
        = link_to show_other_all_items_path do
          すべての商品を見る

    -# TODO: カテゴリー・ブランド実装時に復活させて使う。
    -# %h2
    -#   ピックアップカテゴリー

  .main-footer
    .main-footer__left
      %h2
        スマホでかんたんフリマアプリ
      %p
        今すぐ無料ダウンロード！
      .main-footer__left__logo
        .main-footer__left__logo__mercari
          = image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/mercari_icon.png?2098311808", class: 'mercari', alt: "メルカリロゴ"
        .main-footer__left__logo__apple-google
          = link_to root_path do
            = image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/app-store.svg?2098311808", alt: "Appleロゴ"
          = link_to root_path do
            = image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/google-play.svg?2098311808", alt: "Googleロゴ"
    .main-footer__right
      = image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/jp/download_content_pc.png?2098311808", alt: "メルカリ"