- items.each do |item|
  .main-content__list__container
    = link_to item_path(item.id) do
      .main-content__list__container__image
        = image_tag item.image.url
      .main-content__list__container__detail
        %h3
          = item.name
        .main-content__list__container__detail__info
          .main-content__list__container__detail__info__price
            = converting_to_jpy(item.price)
          .main-content__list__container__detail__info__like
            = fa_icon "heart"
            = item.likes.count

