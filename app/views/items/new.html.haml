      = link_to '特定商取引に関する表記', "https://www.mercari.com/jp/privacy/", class: 'footer_items_new__lists__item__link', target: "_blank", data:{turbolinks: :false}

  = link_to 'root_path', class: 'footer_items_new__link', data:{turbolinks: :false} do
